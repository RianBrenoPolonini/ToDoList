<div class="row mx-auto justify-content-center align-items-center"  style="margin-top: 7%">
  <div class="col-md-6 col-md-offset-3 col-xs-12">
  <h1>Entrar</h1>
    <%= form_for :session, url: entrar_path, method: :post do |f| %>

      <div class="form-group">
        <%= f.label 'Email' %>
        <%= f.email_field :email, placeholder: 'Email', class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label 'Senha' %>
        <%= f.password_field :password, placeholder: 'Senha', class: 'form-control' %>
      </div>
    <br>
      <%= f.submit 'Entrar', class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>