<div class="row mx-auto justify-content-center align-items-center"  style="margin-top: 7%">
  <div class="col-md-6 col-md-offset-3 col-xs-12">
    <div class="col-xs-12">
      <h1>Editar Lista</h1>
    </div>
    <%= form_for @list do |f| %>
    <div class="form-group">
      <%= f.label 'Nome' %>
      <%= f.text_field :name, class: 'form-control' %>
    </div>
    <br>
    <%= f.submit 'Alterar', class: 'btn btn-primary' %>
    <%= link_to 'Voltar', lists_path %>
    <% end %>
  </div>
</div>